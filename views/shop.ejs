<%- include('./partials/header') %>
    <div class="w-full min-h-screen flex items-start px-20 py-20 pb-10">
        <div class="w-[25%] h-screen flex flex-col items-start">
            <div class="flex items-center gap-2">
                <h3>sort by</h3>
                <form action="/shop">
                    <select class="border-[1px] px-2 py-1" name="sortby" id="">
                        <option value="popular">Popular</option>
                        <option value="newest">Newest</option>
                    </select>
                </form>
            </div>
            <div class="flex flex-col mt-20">
                <a class="block w-fit mb-2" href="/owners/admin">New Collection</a>
                <a class="block w-fit mb-2" href="">All Products</a>
                <a class="block w-fit mb-2" href="">Discounted Products</a>
            </div>
            <div class="mt-32">
                <a class="block w-fit mb-2" href="">Filter by :</a>
                <a class="block w-fit mb-2" href="">Availability</a>
                <a class="block w-fit mb-2" href="">Discount</a>
            </div>
        </div>
        <div class="w-[75%] min-h-screen flex flex-col gap-5">
            <div class="w-full h-full flex flex-wrap gap-10">
                <% products.forEach(function(product){ %>
                    <div class="w-[22%] ">
                        <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                            <img class="h-[13rem] object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                        </div>
                        <div class="flex items-center justify-between bg-[<%= product.panelcolor %>] px-4 py-4 text-[<%= product.textcolor %>]">
                            <div>
                                <h3><%= product.name %></h3>
                                <h4>â‚¹ <%= product.price %></h4>
                            </div>
                            <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="/addtocart/<%= product._id %>"><i class="ri-add-line"></i></a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
<%- include('./partials/footer') %>
