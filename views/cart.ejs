<%- include('./partials/header') %>
    <% if(!user) { %>
        <div class="w-fit px-3 py-2 ">
            <h1 class="mt-10 rounded-md bg-red-600 text-white px-5 py-2">No Items Here...</h1>
        </div>
    <% } else{ %>
        <% user.cart.forEach(function(alldata){ %>
            <div class="left-right w-full h-screen flex items-start px-20 py-20 gap-10">
                <div class="leftpart w-[30%] rounded-md overflow-hidden">
                <div class="w-full h-80 flex items-center justify-center bg-[<%= alldata.bgcolor %>]">
                    <img class="h-[20rem] object-cover" src="data:image/jpeg;base64, <%= alldata.image.toString('base64')  %>" alt="">
                </div>
                <div class="w-full flex justify-between px-5 py-4 bg-[<%= alldata.textcolor %>]">
                    <h3 class="text-2xl"><%= alldata.name %></h3>
                    <div class="flex items-center gap-2">
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                        <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                    </div>
                </div>
                <div class="flex items-center justify-between px-5 py-3 bg-[<%= alldata.panelcolor %>]">
                    <h4 class="text-lg">Net Total</h4>
                    <h2 class="text-lg">₹ <%= Number(alldata.price) + 20 - Number(alldata.discount) %></h2>
                </div>
                </div>
                <div class="rightpart w-[70%] relative">
                <h3 class="text-xl">Price Breakdown</h3>
                <div class="px-10 mt-5">
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Total MRP</h4>
                        <h4>₹ <%= alldata.price %></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Discount on MRP</h4>
                        <h4>₹ <%= Number(alldata.discount) %></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Platform Fee</h4>
                        <h4>₹ 20</h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Shipping Fee</h4>
                        <h4>FREE</h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-black mt-10"></div>
                <div class="flex mt-5 mb-5">
                    <h3 class="w-1/3 text-xl">Total Amount</h3>
                    <h3 class="font-semibold text-xl text-green-600">₹ <%= Number(alldata.price) + 20 - Number(alldata.discount) %></h3>
                </div>
                <a class="absolute right-0 mt-[105px] px-4 py-3 rounded-md bg-red-600 text-white text-2xl" href="/delete/<%= alldata._id %>">Remove to Cart</a>
                </div>
            </div>
            <h1 class="text-4xl fixed bottom-0 ml-5">Total All Amount = ₹ <%= totalamount %></h1>
        <% }) %>
    <% } %>   
<%- include('./partials/footer') %>